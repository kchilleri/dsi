    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },

        {
            "name": "Python: Workflow",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "module": "unittest",
            "args": [
                "discover",
                "testing"
            ]
        },

        {
            "name": "Launch on Server",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/viewers"
        },

        {
            "type": "msedge",
            "request": "launch",
            "name": "Html local test",
            "url": "${file}",
            "cwd": "${fileDirname}"
        }
    ]
}